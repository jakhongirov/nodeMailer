<html>

<head>
   <title>Prologue by HTML5 UP</title>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
   <link rel="stylesheet" href="/assets/css/main.css" />
</head>

<body class="is-preload">

   <!-- Header -->
   <div id="header">

      <div class="top">

         <!-- Logo -->
         <div id="logo">
            <% for ( let i of user) {%>
               <span class="image avatar48"><img src=<%=i.user_avatar %> alt="" /></span>
               <h1 id="title">
                  <%= i.user_surname %>
               </h1>
               <p>
                  <%= i.user_job %>
               </p>
               <%} %>
         </div>

         <!-- Nav -->
         <nav id="nav">
            <ul>
               <li><a href="#top" id="top-link"><span class="icon solid fa-home">Intro</span></a></li>
               <li><a href="#about" id="about-link"><span class="icon solid fa-user">About Me</span></a></li>
               <li><a href="#contact" id="contact-link"><span class="icon solid fa-envelope">Contact</span></a></li>
            </ul>
         </nav>

      </div>

      <div class="bottom">

         <!-- Social Icons -->
         <ul class="icons">
            <li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
            <li><a href="#" class="icon brands fa-github"><span class="label">Github</span></a></li>
            <li><a href="#" class="icon brands fa-dribbble"><span class="label">Dribbble</span></a></li>
            <li><a href="#" class="icon solid fa-envelope"><span class="label">Email</span></a></li>
         </ul>

      </div>

   </div>

   <!-- Main -->
   <div id="main">

      <!-- Intro -->
      <section id="top" class="one dark cover">
         <div class="container">

            <header>
               <% for (let i of user) {%>
                  <h2 class="alt">Hello I'm <%= i.user_surname%>
                        <%= i.user_name%>
                  </h2>
                  <p>I'm younger <%= i.user_job%>
                  </p>
                  <%} %>
            </header>

            <footer>
               <a href="#about" class="button scrolly">About me</a>
            </footer>

         </div>
      </section>

      <!-- About Me -->
      <section id="about" class="three">
         <div class="container">

            <header>
               <h2>About Me</h2>
            </header>

            <% for (let i of about) {%>

               <a href="#" class="image featured"><img src=<%=i.image%> /></a>

               <p>
                  <%=i.desc %>
               </p>
               <%} %>
         </div>
      </section>

      <!-- Contact -->
      <section id="contact" class="four">
         <div class="container">

            <header>
               <h2>Contact</h2>
            </header>

            <p>I want to teach Frontend. Fill in the bottom you want to learn</p>

            <form action="/contact" method="POST">
               <div class="row">
                  <div class="col-6 col-12-mobile"><input type="text" name="name" placeholder="Name" required /></div>
                  <div class="col-6 col-12-mobile"><input type="text" name="email" placeholder="Email" required /></div>
                  <div class="col-12">
                  </div>
                  <div class="col-12">
                     <input type="submit" value="Send" />
                  </div>
               </div>
            </form>

         </div>
      </section>

   </div>

   <!-- Footer -->
   <div id="footer">

      <!-- Copyright -->
      <ul class="copyright">
         <li>&copy; Untitled. All rights reserved.</li>
         <li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
      </ul>

   </div>

   <!-- Scripts -->
   <script src="assets/js/jquery.min.js"></script>
   <script src="assets/js/jquery.scrolly.min.js"></script>
   <script src="assets/js/jquery.scrollex.min.js"></script>
   <script src="assets/js/browser.min.js"></script>
   <script src="assets/js/breakpoints.min.js"></script>
   <script src="assets/js/util.js"></script>
   <script src="assets/js/main.js"></script>

</body>

</html>